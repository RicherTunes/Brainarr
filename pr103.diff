+            return total > 0 ? (double)_totalHits / total : 0;
+        }
+
+        public double GetAverageAccessTime()
+        {
+            return _accessTimes.Any() ? _accessTimes.Average() : 0;
+        }
+
+        public Dictionary<CacheLevel, long> GetHitsByLevel()
