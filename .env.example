# Brainarr Configuration Example
# Copy this file to .env and fill in your actual values

# Lidarr Configuration
LIDARR_URL=http://localhost:8686/
LIDARR_API_KEY=your_lidarr_api_key_here

# Build Configuration
# Path to Lidarr installation directory for building the plugin
# Windows: LIDARR_PATH=C:\ProgramData\Lidarr\bin
# Linux: LIDARR_PATH=/opt/Lidarr
# Docker: LIDARR_PATH=/usr/lib/lidarr/bin
LIDARR_PATH=C:\ProgramData\Lidarr\bin

# MusicBrainz Configuration (for ML training)
MUSICBRAINZ_URL=http://localhost:5001

# AI Provider API Keys (only add the ones you plan to use)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
OPENROUTER_API_KEY=your-openrouter-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
GEMINI_API_KEY=your-gemini-api-key
GROQ_API_KEY=your-groq-api-key

# Local AI Configuration
OLLAMA_URL=http://localhost:11434
LMSTUDIO_URL=http://localhost:1234

# Test Configuration
TEST_MODE=false
LOG_LEVEL=Information