<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <!-- Timeout for the entire test session in milliseconds (10 minutes) -->
    <TestSessionTimeout>600000</TestSessionTimeout>

    <!-- Enable parallel test execution for better performance -->
    <MaxCpuCount>0</MaxCpuCount> <!-- 0 = use all available cores -->

    <!-- Enable parallelization for faster testing -->
    <DisableParallelization>false</DisableParallelization>

    <!-- Test adapter settings -->
    <ResultsDirectory>./TestResults</ResultsDirectory>

    <!-- Treat test failures as warnings after timeout -->
    <TreatNoTestsAsError>false</TreatNoTestsAsError>
  </RunConfiguration>

  <DataCollectionRunSettings>
    <DataCollectors>
      <!-- Disable aggressive hang detection; increase to avoid false positives -->
      <DataCollector friendlyName="blame" enabled="True">
        <Configuration>
          <CollectDump DumpType="Mini" />
          <CollectDumpOnTestSessionHang TestTimeout="10m" DumpType="Mini" />
          <ResultsDirectory>./TestResults</ResultsDirectory>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>

  <!-- xUnit specific settings optimized for performance -->
  <xUnit>
    <LongRunningTestSeconds>10</LongRunningTestSeconds> <!-- Increased from 5s to 10s -->
    <MaxParallelThreads>0</MaxParallelThreads> <!-- 0 = use all available cores -->
    <ParallelizeTestCollections>true</ParallelizeTestCollections> <!-- Enable collection parallelization -->
  </xUnit>
</RunSettings>
