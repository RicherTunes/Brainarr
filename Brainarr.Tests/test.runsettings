<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <!-- Timeout for each test in milliseconds (30 seconds) -->
    <TestSessionTimeout>30000</TestSessionTimeout>
    
    <!-- Maximum parallel test execution -->
    <MaxCpuCount>1</MaxCpuCount>
    
    <!-- Disable parallel execution for problematic tests -->
    <DisableParallelization>true</DisableParallelization>
    
    <!-- Test adapter settings -->
    <ResultsDirectory>./TestResults</ResultsDirectory>
    
    <!-- Treat test failures as warnings after timeout -->
    <TreatNoTestsAsError>false</TreatNoTestsAsError>
  </RunConfiguration>
  
  <DataCollectionRunSettings>
    <DataCollectors>
      <!-- Blame data collector for hanging tests -->
      <DataCollector friendlyName="blame" enabled="True">
        <Configuration>
          <CollectDump DumpType="Mini" />
          <CollectDumpOnTestSessionHang TestTimeout="30s" DumpType="Mini" />
          <ResultsDirectory>./TestResults</ResultsDirectory>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
  
  <!-- xUnit specific settings -->
  <xUnit>
    <LongRunningTestSeconds>5</LongRunningTestSeconds>
    <MaxParallelThreads>1</MaxParallelThreads>
    <ParallelizeTestCollections>false</ParallelizeTestCollections>
  </xUnit>
</RunSettings>