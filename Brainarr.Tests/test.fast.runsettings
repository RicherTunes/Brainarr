<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <TestSessionTimeout>600000</TestSessionTimeout>
    <MaxCpuCount>0</MaxCpuCount>
    <DisableParallelization>false</DisableParallelization>
    <ResultsDirectory>./TestResults</ResultsDirectory>
    <TreatNoTestsAsError>false</TreatNoTestsAsError>
    <TestCaseFilter>TestCategory!=Performance&amp;TestCategory!=Stress</TestCaseFilter>
  </RunConfiguration>

  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="blame" enabled="True">
        <Configuration>
          <CollectDump DumpType="Mini" />
          <CollectDumpOnTestSessionHang TestTimeout="10m" DumpType="Mini" />
          <ResultsDirectory>./TestResults</ResultsDirectory>
        </Configuration>
      </DataCollector>
      <DataCollector friendlyName="XPlat Code Coverage" enabled="True">
        <Configuration>
          <!-- Explicitly include the plugin assembly for coverage -->
          <Include>[Lidarr.Plugin.Brainarr]*</Include>
          <Exclude>[Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Services.Providers.*</Exclude>
          <Exclude>[Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Services.Enrichment.*</Exclude>
          <Exclude>[Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Services.Support.MinimalResponseParser*</Exclude>
          <Exclude>[Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Services.Resilience.*</Exclude>
          <Exclude>[Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Models.Responses.*</Exclude>
          <Exclude>[Lidarr.Plugin.Brainarr]Brainarr.Plugin.Models.ProviderResponses.*</Exclude>
          <!-- Exclude providers and enrichment layers from coverage in fast CI to keep gate deterministic -->
          <ExcludeByFile>
            **/Services/Providers/*.cs;
            **/Services/Enrichment/*.cs;
            **/Services/Cost/*.cs;
            **/Services/Security/*.cs;
            **/Services/Performance/*.cs;
            **/Services/NLogWrapper.cs;
            **/Services/ModelDetectionService.cs;
            **/Services/Telemetry/*.cs;
            <!-- Exclude heavy orchestrator glue to keep fast gate deterministic and stable -->
            **/Services/Core/AIService.cs;
            **/Services/Core/ProviderManager.cs;
            **/BrainarrImportList.cs
          </ExcludeByFile>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>

  <xUnit>
    <LongRunningTestSeconds>10</LongRunningTestSeconds>
    <MaxParallelThreads>0</MaxParallelThreads>
    <ParallelizeTestCollections>true</ParallelizeTestCollections>
  </xUnit>
</RunSettings>
