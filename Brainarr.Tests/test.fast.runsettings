<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <TestSessionTimeout>600000</TestSessionTimeout>
    <MaxCpuCount>0</MaxCpuCount>
    <DisableParallelization>false</DisableParallelization>
    <ResultsDirectory>./TestResults</ResultsDirectory>
    <TreatNoTestsAsError>false</TreatNoTestsAsError>
    <TestCaseFilter>TestCategory!=Performance&amp;TestCategory!=Stress</TestCaseFilter>
  </RunConfiguration>

  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="blame" enabled="True">
        <Configuration>
          <CollectDump DumpType="Mini" />
          <CollectDumpOnTestSessionHang TestTimeout="10m" DumpType="Mini" />
          <ResultsDirectory>./TestResults</ResultsDirectory>
        </Configuration>
      </DataCollector>
      <DataCollector friendlyName="XPlat Code Coverage" enabled="True">
        <Configuration>
          <Exclude>
            [Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Services.Providers.*
            [Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Services.Enrichment.*
            [Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Services.Support.MinimalResponseParser*
            [Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Services.Resilience.*
            [Lidarr.Plugin.Brainarr]NzbDrone.Core.ImportLists.Brainarr.Models.Responses.*
            [Lidarr.Plugin.Brainarr]Brainarr.Plugin.Models.ProviderResponses.*
          </Exclude>
          <!-- Exclude providers and enrichment layers from coverage in fast CI to keep gate deterministic -->
          <ExcludeByFile>
            **/Services/Providers/*.cs;
            **/Services/Enrichment/*.cs;
            **/Services/Cost/*.cs;
            **/Services/Security/*.cs;
            **/Services/Performance/*.cs;
            **/Services/NLogWrapper.cs;
            **/Services/ModelDetectionService.cs;
            **/Services/Telemetry/*.cs
          </ExcludeByFile>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>

  <xUnit>
    <LongRunningTestSeconds>10</LongRunningTestSeconds>
    <MaxParallelThreads>0</MaxParallelThreads>
    <ParallelizeTestCollections>true</ParallelizeTestCollections>
  </xUnit>
</RunSettings>
