<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Public package sources -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />

    <!-- Lidarr-specific sources (public Azure DevOps feeds) -->
    <add key="Taglib" value="https://pkgs.dev.azure.com/Lidarr/Lidarr/_packaging/Taglib/nuget/v3/index.json" />
    <add key="SQLite" value="https://pkgs.dev.azure.com/Servarr/Servarr/_packaging/SQLite/nuget/v3/index.json" />
    <add key="FluentMigrator" value="https://pkgs.dev.azure.com/Servarr/Servarr/_packaging/FluentMigrator/nuget/v3/index.json" />
  </packageSources>

  <!--
    Note: Package source mapping removed - not needed with ProjectReferences.
    When building Lidarr from source, private packages are resolved during
    Lidarr build, not plugin build. This simplifies configuration and
    eliminates authentication issues.
  -->
</configuration>
